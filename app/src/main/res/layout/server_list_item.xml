<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:id="@+id/server_item_parent_layout">

    <ImageView
        android:id="@+id/server_item_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:paddingLeft="15dp"/>
    <TextView
        android:id="@+id/server_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:paddingTop="20dp"
        android:layout_toRightOf="@id/server_item_icon"/>
    <TextView
        android:id="@+id/server_item_motd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="35dp"
        android:paddingLeft="15dp"
        android:layout_alignTop="@id/server_item_name"
        android:layout_toRightOf="@id/server_item_icon"/>
    <TextView
        android:id="@+id/server_item_num_players"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="15dp"
        android:paddingTop="15dp"
        android:layout_alignParentRight="true"/>

</RelativeLayout>